/**index.wxss**/

.flex-row {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 5rpx;
}

.today {
  margin-bottom: 30rpx;
}

.forecast {
  margin-bottom: 30rpx;
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 24rpx;
}

.now-img {
  width: 128rpx;
  height: 100rpx;
}

.forecastItem {
  border: 1rpx solid #ccc;
  padding: 10rpx;
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.3);
}

.forecast-img {
  width: 64rpx;
  height: 50rpx;
}

.weui-footer {
  color: #999999;
  font-size: 14px;
  text-align: center;
}
.weui-footer a {
  color: #586c94;
}
.weui-footer_fixed-bottom {
  position: fixed;
  bottom: 0.52em;
  left: 0;
  right: 0;
}
.weui-footer__links {
  font-size: 0;
}
.weui-footer__link {
  display: inline-block;
  vertical-align: top;
  margin: 0 0.62em;
  position: relative;
  font-size: 14px;
}
.weui-footer__link:before {
  content: ' ';
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #c7c7c7;
  color: #c7c7c7;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  left: -0.65em;
  top: 0.36em;
  bottom: 0.36em;
}

.weui-footer__link:first-child:before {
  display: none;
}
.weui-footer__text {
  padding: 0 0.34em;
  font-size: 12px;
}
